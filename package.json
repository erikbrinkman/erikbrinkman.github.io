{
  "name": "website",
  "private": true,
  "version": "0.0.1",
  "description": "Erik Brinkman's Personal Website",
  "main": "index.js",
  "repository": "git@github.com:erikbrinkman/erikbrinkman.github.io.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpify next dev",
    "build": "pnpify next build && touch docs/.nojekyll",
    "fmt": "pnpify prettier --cache --write 'app/**/*.tsx' 'components/**/*.tsx' 'utils/**/*.ts' next.config.mjs postcss.config.js tailwind.config.js tsconfig.json package.json",
    "lint": "pnpify tsc && pnpify next lint"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "next": "^14.0.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.33",
    "@types/sharp": "^0.32.0",
    "@yarnpkg/pnpify": "^4.0.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.1",
    "eslint-plugin-spellcheck": "^0.0.20",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3"
  },
  "resolutions": {
    "minimist": "1.2.6",
    "minimatch": "^3.0.5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "spellcheck"
    ],
    "extends": "next/core-web-vitals",
    "rules": {
      "no-console": "warn",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ]
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "Ascii",
            "Markable",
            "asciimath",
            "brinkman",
            "erik",
            "favicon",
            "gmail",
            "mailto",
            "noreferrer",
            "repub",
            "statscli",
            "stddev",
            "whitespace"
          ],
          "minLength": 4
        }
      ]
    }
  },
  "packageManager": "yarn@4.0.1"
}
