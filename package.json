{
  "name": "website",
  "private": true,
  "version": "0.0.1",
  "description": "Erik Brinkman's Personal Website",
  "main": "index.js",
  "repository": "git@github.com:erikbrinkman/erikbrinkman.github.io.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export -o docs && touch docs/.nojekyll",
    "fmt": "prettier --write 'pages/**/*.tsx' 'components/**/*.tsx' 'utils/**/*.ts' '*.{json,js,ts}'",
    "lint": "next lint && tsc"
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "next": "^12.1.6",
    "postcss": "^8.4.14",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.4.0",
    "tailwindcss": "^3.0.24",
    "typescript": "4.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.12",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-spellcheck": "^0.0.19",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "spellcheck"
    ],
    "extends": "next/core-web-vitals",
    "rules": {
      "no-console": "warn",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ]
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "Ascii",
            "Markable",
            "asciimath",
            "brinkman",
            "erik",
            "favicon",
            "gmail",
            "mailto",
            "noreferrer",
            "repub",
            "statscli",
            "stddev",
            "whitespace"
          ],
          "minLength": 4
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
